#!/bin/bash

nick=testBot
line=${1/$'\r'/}
color=$2

# https://en.wikichip.org/wiki/irc/colors
ircBold=$'\x02'
ircItalics=$'\x1D'
ircUnderline=$'\x1F'
ircReverse=$'\x16'
ircPlain=$'\x0F'

ircWhite=$'\x03'00
ircBlack=$'\x03'01
ircNavy=$'\x03'02
ircGreen=$'\x03'03
ircRed=$'\x03'04
ircMaroon=$'\x03'05
ircPurple=$'\x03'06
ircOlive=$'\x03'07
ircYellow=$'\x03'08
ircLightGreen=$'\x03'09
ircTeal=$'\x03'10
ircCyan=$'\x03'11
ircRoyalblue=$'\x03'12
ircMagenta=$'\x03'13
ircGray=$'\x03'14
ircLightGray=$'\x03'15

grep -i -q "Sorry, I can't find distro" <<<"$line" && {
	line="${line} $nick"
}
grep -i -q $nick <<<"$line" || exit

[[ "${line,,}" =~ help ]] && {
	echo "
usage0: (bz|bug )\$bugid or bug url  cc $nick   # get bug info
usage1: <\$distro_list>  cc $nick   # get kernel versions of \$distro_list
usage2: pkg <pkg_name_pattern> <distro_name_pattern>  cc $nick # check default package version in specified distro"
	exit 0
}

[[ "${line,,}" =~ thx|thank ]] && {
	echo 'you are welcome!'
	exit 0
}

[[ "${line,,}" =~ pkg ]] && {
	read pkgname distroname _ <<<"${line/*[Pp][Kk][Gg]/}"
	if [[ "$color" = color* ]]; then
		distro-compose -n -p "$pkgname" -d "$distroname" -as390x --oneline | head -n2 |
			sed -r "s/${pkgname//[\^$]/}/${ircRed}&${ircPlain}/g"
	else
		distro-compose -n -p "$pkgname" -d "$distroname" -as390x --oneline | head -n2
	fi
	exit 0
}

distros=$(egrep -i -o "(RHEL-[0-9]|Fedora-)[a-zA-Z0-9._-]*" <<<"$line")
for distro in $distros; do
	if [[ "$color" = color* ]]; then
		distro-compose -n -p "^kernel-[0-9]+" -d "$distro" --oneline | head -n2 |
			sed -r "s/kernel-[a-zA-Z0-9._-]*/${ircRed}&${ircPlain}/g"
	else
		distro-compose -n -p "^kernel-[0-9]+" -d "$distro" --oneline | head -n2
	fi
done

bugs=$(egrep -i -o '(bug *|bz|bugzilla.redhat.com.*id=)[0-9]+\>' <<<"$line"|sed -r 's/(bug *|bz|bugzilla.redhat.com.*id=)//I')
while read bug; do
	[[ -z "$bug" ]] && continue
	bugzilla query -b ${bug}
done <<<"$bugs"
exit 0
